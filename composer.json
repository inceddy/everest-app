{
    "name": "everest/app",
    "description": "Everest - Application Component",
    "license": "MIT",
    "authors": [
        {
            "name": "Philipp Steingrebe",
            "email": "philipp@steingrebe.de"
        }
    ],
    "autoload": {
        "psr-0" : {
            "Everest\\App\\" : "src/"
        }
    },
    "require": {
        "php" : ">=8.1",
        "everest/container": "^2.0",
        "everest/http": "^2.0"
    },

    "suggest": {
        "twig/twig": "Template engine that can be used using the Everest\\App\\Provider\\TwigProvider",
        "monolog/monolog": "Logger that can be used using the Everest\\App\\Provider\\MonologProvider"
    },
    "require-dev": {
        "vimeo/psalm": "^4.26",
        "rector/rector": "^0.14.0",
        "phpstan/phpstan": "^1.8",
        "phpstan/phpstan-phpunit": "^1.1",
        "symplify/easy-coding-standard": "^11.1"
    }
}
